<% provide(:title, "登陆") %>

<div class="row" style="margin-top: 30px;margin-bottom: 10px;">
  <div class="col-md-9">
    <div style="width: 100%;height: 300px;background-color: lightgrey"></div>
  </div>
  <div class="col-md-3">
    <%= form_for(:session, url: sessions_path, role: 'form') do |f| %>
      <div class="form-group">
        <%= f.label "用户名" %>
        <%= f.text_field :username, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label "密码" %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="checkbox">
        <label>
          <%= f.check_box :remember_password, {}, "yes", "no" %> 记住密码
        </label>
      </div>

      <%= f.submit "登陆", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

