<div class="pad20A" >

  <div class="row" style="padding-top: 80px;">


    <div class="clear"></div>

    <%= form_for(:session, url: admin_sessions_path, html: { class: 'col-md-3 center-margin form-vertical mrg25T' } ) do |f| %>

        <% flash.each do |key, value| %>
          <div class="infobox <%= key %>-bg"><p><%= value %></p></div>
        <% end %>


      <div id="login-form" class="content-box drop-shadow">

        <div class="content-box-wrapper pad20A pad0B">
          <div class="form-row">
            <div class="form-label col-md-2">
              <label for="session_username">
                用户名:
              </label>
            </div>
            <div class="form-input col-md-10">
              <div>
                <%= f.text_field :username, class: 'form-control', placeholder: '用户名' %>
              </div>
            </div>
          </div>

          <div class="form-row">
            <div class="form-label col-md-2">
              <label for="session_password">
                密码:
              </label>
            </div>
            <div class="form-input col-md-10">
              <div>
                <%= f.password_field :password, class: 'form-control', placeholder: '密码' %>
              </div>
            </div>
          </div>
          <div class="form-row">
            <div class="form-checkbox-radio col-md-6">
              <%= f.check_box :remember_password, { class: 'custom-checkbox' }, 'yes', 'no' %>
              <label for="remember_password" class="pad5L">记住密码</label>
            </div>
          </div>
        </div>
        <div class="button-pane">
          <button type="submit" class="btn large primary-bg text-transform-upr font-bold font-size-11 radius-all-4" id="demo-form-valid" title="Validate!">
            <span class="button-content">
                登陆
            </span>
          </button>
        </div>
      </div>

    <% end %>

  </div>

</div>


<div id="page-footer-wrapper" class="login-footer">
  <div id="page-footer">
    Copyright &copy; 2013 - 嘻嘻嘻网络有限公司
  </div>
</div>
<!-- #page-footer-wrapper -->

</body>
</html>
